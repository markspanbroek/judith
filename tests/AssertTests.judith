object AssertTests := Object |[

  method doesNotThrowOnTrue 
  [
    Assert.that(true)
  ] 
  
  method throwsOnFalse 
  [
    object exceptionWasThrown := false
    
    ExceptionHandler |[
    
      method try 
      [
        Assert.that(false)
      ]
      
      method catch(exception) 
      [
        exceptionWasThrown := true
      ]
      
    ]|.run
    
    if not exceptionWasThrown
      AssertionFailedException.throw
    fi
  ]
  
]|

AssertTests
  .doesNotThrowOnTrue
  .throwsOnFalse
