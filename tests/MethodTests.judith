object MethodTests := Object
|[
    method methodBodyHasInnerScope
    [
        Assert.that(
            Function |[ 
                method run [ 
                    result := true 
                    object result := false 
                ]
            ]|.run
        ).isTrue
    ]

    method methodCallToSelf
    [
        object timesBarWasCalled := 0

        Object
        |[
            method bar
            [
                timesBarWasCalled := timesBarWasCalled + 1
            ]

            method callBar
            [
                self.bar
                bar
            ]
        ]|.callBar

        Assert.that(timesBarWasCalled).equals(2)
    ]
]|

MethodTests
