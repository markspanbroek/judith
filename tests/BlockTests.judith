object BlockTests := Object |[

    method blockHasOwnScope 
    [
        object foo := true
        [
            object foo := false
            Assert.that(not foo)
        ]
        Assert.that(foo)
    ]
    
    method emptyBlockIsAllowed
    [
        []
    ]
    
    method blockIsProcedure
    [
        Assert.that([] : Procedure)
    ]
    
    method blockHasRunMethod
    [
        object wasRun := false
        [ wasRun := true ].run
        Assert.that(wasRun)
    ]
    
    method runMethodPassesParameters
    [
        object wasRun := false
        [ x -> wasRun := x ].run(true)
        Assert.that(wasRun)
    ]
]|

BlockTests
    .blockHasOwnScope
    .emptyBlockIsAllowed
    .blockIsProcedure
    .blockHasRunMethod
    .runMethodPassesParameters
